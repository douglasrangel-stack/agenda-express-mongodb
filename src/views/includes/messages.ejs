<% if(errors.length) { %>
    <div class="row click-some">
        <div class="col">
            <div class="alert alert-danger">
                <% errors.forEach(erro => { %>
                    <%= erro %><br>
                <% }) %>
            </div>
        </div>
    </div>
<% } %>

<% if(success.length) { %>
    <div class="row click-some">
        <div class="col">
            <div class="alert alert-success">
                <% success.forEach(erro => { %>
                    <%= success %><br>
                <% }) %>
            </div>
        </div>
    </div>
<% } %>